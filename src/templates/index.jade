doctype html
html
    head
        meta(charset='utf-8')
        title 天时 - iMumu的个人博客归档
        meta(http-equiv='X-UA-Compatible', content='IE=edge')
        meta(name='viewport', content='width=device-width, initial-scale=1')
        meta(name='description', content='iMumu的个人博客')
        meta(name='author', content='iMumu<imumu@foxmail.com>')
        meta(name='keywords', content='天时,个人博客,web,html5,javascript,js,css,css3')
        link(rel='stylesheet', href='./lib/bootstrap/css/bootstrap.css')
        link(rel='stylesheet', href='./css/home.css')
    body
        .jumbotron
            .container.text-center
                a.logo-link.center-block(href='http://www.ifviva.com', target='_blank')
                    include /src/templates/logo.jade
                h1 天时
                p iMumu的个人博客 - 归档

        .container
            each monthArticles, date in articles
                .panel.panel-default
                    .panel-heading
                        h3.panel-title #{date}
                    .panel-body
                        each article in monthArticles
                            h3.article-item
                                a(href="./articles/#{date}/#{article.alias}/index.html") #{article.title}
                                small.text-muted #{article.date}


        script(src='./lib/jquery-2.1.4.js')
        script(src='./lib/bootstrap/js/bootstrap.js')
